{% extends 'layouts/app.twig' %}

{% block title %}Sign In{% endblock %}


{% block content %}
  <div class="login-box">
    <div class="row">
      <div class="col-sm-offset-2 col-sm-8">


        <form class="form-horizontal" action="{{ path_for('auth.signin') }}" method="POST">
          <div class="form-group">
            <label for="inputEmail" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
              <input class="form-control" type="email" name="email" value="{{ old.email }}" id="inputEmail"/>
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
              <input class="form-control" type="password" name="password" id="inputPassword"/>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Sign In</button>
            </div>
          </div>
          {{ csrf.field | raw }}
        </form>
      </div>
    </div>
  </div>
{% endblock %}
